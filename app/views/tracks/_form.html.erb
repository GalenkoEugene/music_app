<%= form_for(@track) do |f| %>
  <% if @track.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@track.errors.count, "error") %> prohibited this track from being saved:</h2>

      <ul>
      <% @track.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :record_name %><br>
    <%= f.text_field :record_name %>
  </div>
  <div class="field">
    <%= f.label :autor_name %><br>
    <%= f.text_field :autor_name %>
  </div>
  <div class="field">
    <%= f.label :album_id %><br>
    <%= f.select :album_id, Album.all.collect {|p| [ p.album_name, p.id ] } %> <!--не в курил до конца но работает-->
  </div>

  <div class="field">
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
