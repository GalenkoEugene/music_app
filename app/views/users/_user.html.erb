<li>
  <%= gravatar_for user, size: 52 %>
  <%= link_to user.name, user %>
  <% if current_user.try(:admin?) && !current_user?(user) %> <!-- current_user.try(:admin?) insted of current_user.admin?-->
    | <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "You sure?" } %>
  <% end %>
</li>