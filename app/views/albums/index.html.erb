<% provide(:title, 'list of albums') %>
<h1>Listing albums</h1>
<br>

<div id="search">
  <%= form_tag(Album, :method => "get") do %>
      <div>
        <%= text_field_tag :search, params[:search], placeholder: "Search by albums" %>
        <button type="submit">Search by album</button>
      </div>
  <% end %>
  </div>

 <br>

<table>
  <thead>
    <tr>
      <th>ID</th> 
      <th>Album name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.id %></td>
        <td><%= album.album_name %></td>
        <td><%= link_to 'Show', album %></td>
        <td><%= link_to 'Edit', edit_album_path(album) %></td>
        <td id="destroy"><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Album', new_album_path %>

